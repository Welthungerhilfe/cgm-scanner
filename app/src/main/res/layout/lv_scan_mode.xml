<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lytScanMode"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgScanMode"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/lying"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_section_margin"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgScanModeCheck"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/radio_inactive"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtScanMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_group_margin"
                android:text="@string/mode_lying"
                android:textColor="@color/colorGreyDark" />
        </LinearLayout>

    </LinearLayout>
</layout>