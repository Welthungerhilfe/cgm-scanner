<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenTransparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_green_round">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo">
        </ImageView>
    </RelativeLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="80dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorGreyDark"
            android:text="Choose the language in which you want to view the app"
        android:visibility="gone"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="80dp"
        android:textSize="17sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="30dp"
        android:text="Choose your prefered language"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:background="@color/colorGreyLight"
        android:layout_marginRight="34dp"></View>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_english"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:buttonTint="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_hindi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="हिन्दी"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:buttonTint="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_bangla"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="বাংলা"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:buttonTint="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_nepali"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="नेपाली"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:buttonTint="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/rb_deutsch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Deutsch"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:buttonTint="@color/colorPrimary"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_sandbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sandbox"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:visibility="gone"
            android:buttonTint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </RadioGroup>
    <Button
        android:id="@+id/bt_done"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/button_green_round"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"></Button>
</LinearLayout>
</layout>